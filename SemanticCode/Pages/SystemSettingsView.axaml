<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SemanticCode.ViewModels"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SemanticCode.Pages.SystemSettingsView"
             x:DataType="vm:SystemSettingsViewModel">
    <Design.DataContext>
        <vm:SystemSettingsViewModel />
    </Design.DataContext>
    
    <ScrollViewer>
        <StackPanel Margin="24" Spacing="24" MaxWidth="600">
            <TextBlock Text="{Binding Title}" 
                       FontSize="24" 
                       FontWeight="Bold" 
                       HorizontalAlignment="Center"
                       Margin="0,0,0,24"/>
            
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="{Binding UpdateLabel}" 
                               FontWeight="Bold"
                               FontSize="18"/>
                    <TextBlock Text="检查应用程序更新"
                               Opacity="0.7"
                               FontSize="13"/>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="{Binding UpdateStatus}"
                                   VerticalAlignment="Center"
                                   FontSize="14"/>
                        <Button Grid.Column="1"
                                Content="检查更新"
                                Command="{Binding CheckUpdateCommand}"
                                IsEnabled="{Binding !IsCheckingUpdate}"
                                MinWidth="100"/>
                    </Grid>
                    
                    <!-- Update details when available -->
                    <Border IsVisible="{Binding LatestUpdate.IsNewerVersion}"
                            Background="{DynamicResource SystemAccentColorLight2Brush}"
                            CornerRadius="8"
                            Padding="16"
                            Margin="0,8,0,0">
                        <StackPanel Spacing="12">
                            <StackPanel Spacing="4">
                                <TextBlock Text="发现新版本"
                                           FontWeight="SemiBold"
                                           FontSize="16"/>
                                <TextBlock Text="{Binding LatestUpdate.Version, StringFormat='版本: v{0}'}"
                                           Opacity="0.9"/>
                            </StackPanel>
                            <TextBlock Text="{Binding LatestUpdate.Description}"
                                       TextWrapping="Wrap"
                                       MaxHeight="100"
                                       IsVisible="{Binding LatestUpdate.Description, Converter={x:Static StringConverters.IsNotNullOrEmpty}}"
                                       Opacity="0.8"/>
                            <Button Content="查看发布页面"
                                    Background="Transparent"
                                    BorderBrush="{DynamicResource SystemAccentColorLight1Brush}"
                                    HorizontalAlignment="Left"
                                    Margin="0,4,0,0"/>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>

            <!-- 作者信息和技术交流群 -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="20">
                <StackPanel Spacing="16">
                    <TextBlock Text="{Binding AboutLabel}" 
                               FontWeight="Bold"
                               FontSize="18"/>
                    
                    <!-- 作者信息 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding AuthorLabel}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Opacity="0.8"/>
                        <TextBlock Text="{Binding AuthorInfo}"
                                   FontSize="14"
                                   Margin="16,0,0,0"/>
                    </StackPanel>
                    
                    <!-- 技术交流群 -->
                    <StackPanel Spacing="8">
                        <TextBlock Text="{Binding TechGroupLabel}"
                                   FontWeight="SemiBold"
                                   FontSize="14"
                                   Opacity="0.8"/>
                        <Border Background="{DynamicResource SystemAccentColorLight3Brush}"
                                CornerRadius="6"
                                Padding="12,8"
                                Margin="16,0,0,0">
                            <TextBlock Text="{Binding TechGroupInfo}"
                                       FontSize="14"
                                       FontWeight="Medium"
                                       Foreground="{DynamicResource SystemAccentColorDark1Brush}"
                                       TextWrapping="Wrap"/>
                        </Border>
                    </StackPanel>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>