<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:SemanticCode.ViewModels"
             xmlns:ui="clr-namespace:FluentAvalonia.UI.Controls;assembly=FluentAvalonia"
             mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="600"
             x:Class="SemanticCode.Pages.HomeView"
             x:DataType="vm:HomeViewModel">
    <Design.DataContext>
        <vm:HomeViewModel />
    </Design.DataContext>
    
    <ScrollViewer Padding="24" HorizontalScrollBarVisibility="Disabled">
        <StackPanel Spacing="32">
            <!-- Header Section -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Title and Version -->
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Spacing="12">
                    <TextBlock Text="{Binding Title}" 
                               FontSize="36" 
                               FontWeight="Bold"/>
                    <Border Background="{DynamicResource AccentButtonBackground}" 
                            CornerRadius="12"
                            Padding="8,4"
                            VerticalAlignment="Center">
                        <TextBlock Text="{Binding Version}" 
                                   FontSize="12" 
                                   Foreground="{DynamicResource AccentButtonForeground}"/>
                    </Border>
                </StackPanel>
                
                <!-- Welcome Message -->
                <TextBlock Grid.Row="1"
                           Text="{Binding WelcomeMessage}" 
                           FontSize="20" 
                           HorizontalAlignment="Center"
                           Margin="0,16,0,8"
                           Foreground="{DynamicResource TextFillColorSecondaryBrush}"/>
                
                <!-- Description -->
                <TextBlock Grid.Row="2"
                           Text="{Binding Description}" 
                           FontSize="14" 
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"
                           MaxWidth="700"
                           TextAlignment="Center"
                           Foreground="{DynamicResource TextFillColorTertiaryBrush}"
                           LineHeight="24"/>
                
                <!-- Build Info -->
                <TextBlock Grid.Row="3"
                           Text="{Binding BuildDate, StringFormat='构建日期: {0}'}"
                           FontSize="12"
                           HorizontalAlignment="Center"
                           Margin="0,8,0,0"
                           Foreground="{DynamicResource TextFillColorDisabledBrush}"/>
            </Grid>
            
            <!-- Claude Installation Section -->
            <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    CornerRadius="8"
                    Padding="24">
                <StackPanel Spacing="16">
                    <TextBlock Text="Claude Code 环境检查" 
                               FontSize="20" 
                               FontWeight="SemiBold"/>
                    
                    <!-- Installation Status Grid -->
                    <Grid ColumnDefinitions="*,100,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Spacing="12">
                            <TextBlock Text="🤖" FontSize="16"/>
                            <TextBlock Text="Claude Code" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   Text="{Binding ClaudeStatus}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"
                                   Foreground="{Binding ClaudeStatusColor}"/>
                        
                        <!-- Node.js Status -->
                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <TextBlock Text="🟢" FontSize="16"/>
                            <TextBlock Text="Node.js (≥18.0)" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="1" Grid.Column="1" 
                                   Text="{Binding NodeStatus}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"
                                   Foreground="{Binding NodeStatusColor}"
                                   Margin="0,8,0,0"/>
                        
                        <!-- Git Status -->
                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <TextBlock Text="📂" FontSize="16"/>
                            <TextBlock Text="Git" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="2" Grid.Column="1" 
                                   Text="{Binding GitStatus}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"
                                   Foreground="{Binding GitStatusColor}"
                                   Margin="0,8,0,0"/>
                        
                        <!-- Environment Variable Status -->
                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Spacing="12" Margin="0,8,0,0">
                            <TextBlock Text="🔧" FontSize="16"/>
                            <TextBlock Text="Git Bash" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   Text="{Binding EnvVarStatus}" 
                                   FontSize="12" 
                                   VerticalAlignment="Center"
                                   Foreground="{Binding EnvVarStatusColor}"
                                   Margin="0,8,0,0"/>
                    </Grid>
                    
                    <!-- Progress Bar -->
                    <ProgressBar IsVisible="{Binding IsInstalling}"
                                 IsIndeterminate="True"
                                 Height="4"/>
                    
                    <!-- Console Output -->
                    <Border IsVisible="{Binding IsInstalling}"
                            Background="#0C0C0C"
                            BorderBrush="#333333"
                            BorderThickness="1"
                            CornerRadius="4"
                            Padding="12"
                            MaxHeight="300">
                        <ScrollViewer x:Name="ConsoleScrollViewer"
                                      HorizontalScrollBarVisibility="Auto"
                                      VerticalScrollBarVisibility="Auto">
                            <TextBlock Text="{Binding ConsoleOutput}"
                                       FontFamily="Consolas, 'Courier New', monospace"
                                       FontSize="12"
                                       Foreground="#00FF00"
                                       TextWrapping="Wrap"
                                       Background="Transparent"/>
                        </ScrollViewer>
                    </Border>
                    
                    <!-- Action Buttons -->
                    <StackPanel Orientation="Horizontal" Spacing="12" HorizontalAlignment="Right">
                        <Button Content="刷新状态" 
                                Command="{Binding RefreshStatusCommand}"
                                IsEnabled="{Binding !IsInstalling}"/>
                        <Button Content="一键安装 Claude Code" 
                                Classes="accent"
                                IsVisible="{Binding !IsAllInstalled}"
                                IsEnabled="{Binding !IsInstalling}"
                                Command="{Binding InstallAllCommand}"/>
                    </StackPanel>
                </StackPanel>
            </Border>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>